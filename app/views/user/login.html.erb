<h3>Not an user yet? Click here to <a href=<%= new_user_path %>>Create an Account</a></h3>
<br>
<h1>Log in</h1>
<%= form_with scope: :user, url: validate_user_path, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name, value: params[:name] || '', class: 'input-block' %>
  </p>
  
  <p>
    <%= form.label :password %><br>
    <%= form.password_field :password, value: params[:password] || '', class: 'input-block' %>
  </p>
  <%= render partial: 'messages/error' %>
  <%= react_component('UnionButton', props: { value: 'Login', type: 'submit'} )%>
<% end %>
